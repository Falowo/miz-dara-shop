{% extends 'base.html.twig' %}

{% block title %}MDS
	{{ product.name }}
{% endblock %}

{% block body %}
	<div class="row">
		<div class="col-12">

			<h1 class="my-4">
				{{ product.name }}
			</h1>

			<div
				class="card mt-4">


				{#             <img class="card-img-top img-fluid " src="{{ asset('images/' ~ product.mainImage) }}" alt="">#}
				{% if product.mainImage %}
					<div id="carouselExampleCaptions" class="carousel slide" data-ride="carousel">

						<ol class="carousel-indicators">
							<li data-target="#carouselExampleCaptions" data-slide-to="0" class="active"></li>

							{% for image in product.images %}
								<li data-target="#carouselExampleCaptions" data-slide-to="{{ loop.index }}"></li>
							{% endfor %}
						</ol>

						<div class="carousel-inner">


							<div
								class="carousel-item active">

								{# {% if product.mainImage %} #}
								<img class="d-block w-100" src="{{ vich_uploader_asset(product, 'mainImageFile') | imagine_filter('big') }}" alt="{{ product.name }}">
								{# {% else %} #}
								{# <img class="d-block w-100" src="{{ '/products/images/main/empty.jpg' | imagine_filter('big') }}" alt="{{ product.name }}"> #}

								{# {% endif %} #}
									<div class="carousel-caption d-none d-md-block"> <h5>{{ product.name }}</h5>
								</div>
							</div>


							{% for image in product.images %}

								<div class="carousel-item">
									<img class="d-block w-100" src="{{ vich_uploader_asset(image, 'imageFile') | imagine_filter('big') }}" alt="{{ product.name }}">
									<div class="carousel-caption d-none d-md-block">
										<h5>{{ image.tint }}</h5>
									</div>
								</div>

							{% endfor %}


						</div>
						<a class="carousel-control-prev" href="#carouselExampleCaptions" role="button" data-slide="prev">
							<span class="carousel-control-prev-icon" aria-hidden="true"></span>
							<span class="sr-only">Previous</span>
						</a>
						<a class="carousel-control-next" href="#carouselExampleCaptions" role="button" data-slide="next">
							<span class="carousel-control-next-icon" aria-hidden="true"></span>
							<span class="sr-only">Next</span>
						</a>
					</div>

				{% else %}
					<img class="card-img-top img-fluid " src="{{ 'products/images/empty.jpg' | imagine_filter('big') }}" alt="{{ product.name }}">
				{% endif %}


				<div class="card-body">
					<h3 class="card-title text-secondary" style="font-weight: bold; font-size: 2rem">{{ product.name | upper }}</h3>

					<h4 class="text-primary" style="font-weight: bold; font-size: 2rem">
						{% if product.discountPrice is null %}

							{{ product.formatedPrice }}
							₦

						{% else %}

							<del>
								{{ product.formatedPrice }}
								₦
							</del>
							&nbsp &nbsp &nbsp
							{{ product.formatedDiscountPrice }}
							₦

						{% endif %}


					</h4>

					<p class="card-text">
						{{ product.info }}
					</p>
					<span class="text-warning">&#9733; &#9733; &#9733; &#9733; &#9734;</span>
					{# 4.5 stars #}
					<div class="container">
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">Sizes</th>
									<th scope="col">Colors</th>
								</tr>
							</thead>
							<tbody>
								{% for sizeName, tints in tints %}

									<tr>
										<th scope="row">{{ sizeName }}</th>


										<td>
											{% for tint in tints %}
												{{ tint.name }}
												{% if not loop.last %}
													,&nbsp
												{% endif %}

											{% endfor %}
										</td>

									</tr>

								{% endfor %}
							</tbody>
						</table>
					</div>
				</div>
				<div class="card-body">
					<h3 class="card-title">Add To Cart</h3>

					{{ include('product/_add_form.html.twig') }}


				</div>

			</div>

		</div>
	</div>
	<pre>
	{{ dump(purchaseLine) }}
</pre>
</div>{% endblock %}{% block javascripts %}
{{ parent() }}

{{ encore_entry_script_tags('add') }}{% endblock %}
