{% extends "base.html.twig" %}

{% block title %}
	MDS Cart
{% endblock %}


{% block body %}


	{% if deliveryFeess is defined %}
		<div class="container mt-5">

			<h2>Select your delivery service</h2>
			<table class="table">

				{% for deliveryFees in deliveryFeess  %}
					<tr>

						<td>
							<a href="{{ path('cart_setDeliveryFees', {'id':deliveryFees.id} ) }}">
								{{ deliveryFees.transport.name}}
							</a>
						</td>
						<td>
							<a href="{{ path('cart_setDeliveryFees', {'id':deliveryFees.id} ) }}">
								Delivered within
								{{deliveryFees.maxDays}}
								days
							</a>
						</td>
						<td>
							<a href="{{ path('cart_setDeliveryFees', {'id':deliveryFees.id} ) }}">
								{{ deliveryFees.deliveryPrice }}&nbspâ‚¦
							</a>
						</td>
						<td>
							<a href="{{ path('cart_setDeliveryFees', {'id':deliveryFees.id} ) }}">
								<i class="fas fa-share-square fa-2x"></i>
							</a>
						</td>

					</tr>
				{% endfor %}


			</table>

		</div>
	{% endif %}
	{# {{ render(controller('App\\Controller\\CartController::cart')) }} #}
{% endblock %}
