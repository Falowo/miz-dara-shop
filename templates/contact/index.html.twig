<div>
  {# <a href="#" class="btn btn-primary">Contact Miz Dara Shop</a> #}
  <h1>Send us an email</h1>

  <div id="contactForm" class="mt-4">
    {{ form_start(form) }}
    <div class="row">
      <div class="col-4">
        {{ form_row(form.firstName) }}
      </div>
      <div class="col-8">
        {{ form_row(form.email) }}
      </div>
    </div>
    <div class="row">
      <div class="col">
        {{ form_row(form.subject) }}
      </div>
    </div>
    <div class="row">
      <div class="col">
        {{ form_row(form.content) }}
      </div>
    </div>
    <div class="form-group">
      <button class="btn my-btn-blue-logo p-3" style="font-size: 2.2rem">
        Send
      </button>
    </div>
    {{ form_end(form) }}
  </div>
</div>
